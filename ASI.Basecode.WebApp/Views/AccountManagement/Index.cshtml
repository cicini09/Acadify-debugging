@using Microsoft.AspNetCore.Identity
@model IEnumerable<ASI.Basecode.Data.Models.User>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin"; 
}

<div class="bg-white rounded-lg shadow p-4">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-semibold">All Users</h2>
        <a asp-action="Create"
           class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded flex items-center">
            ➕ Add New Account
        </a>
    </div>

    <table class="w-full border-collapse">
        <thead class="bg-gray-50">
            <tr>
                <th class="p-2 text-left">User ID</th>
                <th class="p-2 text-left">Name</th>
                <th class="p-2 text-left">Email</th>
                <th class="p-2 text-left">Role</th>
                <th class="p-2 text-left">Status</th>
                <th class="p-2 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr class="border-b">
                    <td class="p-2">@user.Id</td>
                    <td class="p-2">@($"{user.FirstName} {user.LastName}")</td>
                    <td class="p-2">@user.Email</td>
                    <td class="p-2">
                        @* show role with color *@
                        @{
                            var roles = await Context.RequestServices
                            .GetService<UserManager<ASI.Basecode.Data.Models.User>>()
                            .GetRolesAsync(user);
                        }
                        @foreach (var role in roles)
                        {
                            var color = role switch
                            {
                                "ADMIN" => "bg-yellow-100 text-yellow-700",
                                "TEACHER" => "bg-green-100 text-green-700",
                                "STUDENT" => "bg-blue-100 text-blue-700",
                                _ => "bg-gray-100 text-gray-700"
                            };
                            <span class="px-2 py-1 rounded text-xs font-medium @color">@role</span>
                        }
                    </td>
                    <td class="p-2">
                        <span class="text-green-600">Active</span>
                    </td>
                    <td class="p-2 flex space-x-2">
                        <a asp-action="Edit" asp-route-id="@user.Id"
                           class="bg-gray-600 hover:bg-gray-700 text-white px-3 py-1 rounded">
                            Edit
                        </a>

                        @* Hide Delete if Admin *@
                        @if (!(await Context.RequestServices
                                            .GetService<UserManager<ASI.Basecode.Data.Models.User>>()
                                            .GetRolesAsync(user)).Contains("Admin"))
                        {
                            <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="inline">
                                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded"
                                        onclick="return confirm('Are you sure you want to delete this user?');">
                                    Delete
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
