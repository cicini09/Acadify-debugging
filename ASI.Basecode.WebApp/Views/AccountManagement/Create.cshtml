@model Student_Performance_Tracker.ViewModels.AccountManagement.CreateUserViewModel
@{
    ViewData["Title"] = "Create User";
}

<div class="max-w-2xl mx-auto bg-white p-6 rounded shadow">
    <h2 class="text-xl font-semibold mb-4">Create New User</h2>

    <form asp-action="Create" method="post" class="space-y-4">
        <div>
            <label asp-for="FirstName" class="block font-medium"></label>
            <input asp-for="FirstName" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="LastName" class="block font-medium"></label>
            <input asp-for="LastName" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="UserName" class="block font-medium"></label>
            <input asp-for="UserName" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="block font-medium"></label>
            <input asp-for="Email" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Password" class="block font-medium"></label>
            <input asp-for="Password" type="password" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex items-center">
            <input asp-for="IsApproved" type="checkbox" class="mr-2" />
            <label asp-for="IsApproved" class="font-medium"></label>
        </div>

        <div class="flex space-x-2">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
                Create
            </button>
            <a asp-action="Index" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
