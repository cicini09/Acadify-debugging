@model ASI.Basecode.Data.Models.Class
@{
    ViewData["Title"] = "Edit Class";
}
<h1>Edit Class</h1>

<form method="post" action="@Url.Action("Edit")">
    @Html.AntiForgeryToken()

    <div style="margin-bottom:1rem;">
        <label>EDP Code</label><br />
        <input asp-for="Id" style="width:120px;" />
        <button type="button">🔍 Search</button>
    </div>

    <p>Course Code<br />
        <input asp-for="CourseId" />
    </p>

    <p>Description<br />
        <input asp-for="Description" />
    </p>

    <p>Units<br />
        <input asp-for="Units" />
    </p>

    <p>Schedule</p>

    <div style="margin-left:1rem;">
        <div>Day</div>
        <div>
            <label><input type="checkbox" name="Days" value="Mon" /> Monday</label><br />
            <label><input type="checkbox" name="Days" value="Tue" /> Tuesday</label><br />
            <label><input type="checkbox" name="Days" value="Wed" /> Wednesday</label><br />
            <label><input type="checkbox" name="Days" value="Thu" /> Thursday</label><br />
            <label><input type="checkbox" name="Days" value="Fri" /> Friday</label><br />
            <label><input type="checkbox" name="Days" value="Sat" /> Saturday</label>
        </div>

        <div style="margin-top:0.75rem;">Time</div>
        <div>
            <input name="StartHour" size="2" maxlength="2" /> :
            <input name="StartMinute" size="2" maxlength="2" />
            &nbsp; - &nbsp;
            <input name="EndHour" size="2" maxlength="2" /> :
            <input name="EndMinute" size="2" maxlength="2" />
            &nbsp;
            <select name="Meridiem">
                <option value="AM">AM</option>
                <option value="PM">PM</option>
            </select>
        </div>
    </div>

    <input type="hidden" asp-for="Schedule" />

    <p>Teacher<br />
        <input asp-for="TeacherId" />
    </p>

    <p>Year<br />
        <select asp-for="YearLevel">
            <option value="">-- Select --</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </p>

    <p>Semester<br />
        <select asp-for="Semester">
            <option value="">-- Select --</option>
            <option value="1">1</option>
            <option value="2">2</option>
        </select>
    </p>

    <p>Status<br />
        <select asp-for="IsActive">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>
    </p>

    <p>Room<br />
        <input asp-for="Room" />
    </p>

    <p style="margin-top:1rem;">
        <button type="submit">Confirm</button>
        <a href="@Url.Action("Index")">Cancel</a>
    </p>
</form>
