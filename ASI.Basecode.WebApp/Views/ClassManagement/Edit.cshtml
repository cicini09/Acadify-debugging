@model Student_Performance_Tracker.ViewModels.ClassManagement.EditClassViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Class";
}

<div class="container">
    <h2>Edit Class</h2>

    <form asp-action="Edit" method="post" class="mt-3">
        <input asp-for="Id" type="hidden" />

        <div class="form-group">
            <label asp-for="CourseId"></label>
            <select asp-for="CourseId" class="form-control" asp-items="@(new SelectList(Model.Courses, "Id", "CourseName"))"></select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TeacherId"></label>
            <select asp-for="TeacherId" class="form-control" asp-items="@(new SelectList(Model.Teachers, "Id", "FirstName"))"></select>
            <span asp-validation-for="TeacherId" class="text-danger"></span>
        </div>

        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Semester"></label>
                <input asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="YearLevel"></label>
                <input asp-for="YearLevel" class="form-control" />
                <span asp-validation-for="YearLevel" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Schedule"></label>
            <input asp-for="Schedule" class="form-control" />
            <span asp-validation-for="Schedule" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Room"></label>
            <input asp-for="Room" class="form-control" />
            <span asp-validation-for="Room" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Join Code (read-only)</label>
            <div class="form-control-plaintext">@Model.JoinCode</div>
        </div>

        <div class="form-group form-check">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
