@model IEnumerable<ASI.Basecode.Data.Models.Class>
@{
    ViewData["Title"] = "Classes";
}
<h1>Classes</h1>

<p>
    <a asp-action="Create">Create</a>
</p>

<table border="1" cellpadding="6" cellspacing="0" style="width:100%">
    <thead>
        <tr>
            <th>EDP</th>
            <th>Course Code</th>
            <th>Description</th>
            <th>Units</th>
            <th>Schedule</th>
            <th>Teacher</th>
            <th>Year</th>
            <th>Semester</th>
            <th>Status</th>
            <th>Room</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null)
    {
        foreach (var x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.CourseId</td>
                <td>@x.Description</td>
                <td>@x.Units</td>
                <td>@x.Schedule</td>
                <td>@(x.Teacher?.UserName ?? x.TeacherId)</td>
                <td>@x.YearLevel</td>
                <td>@x.Semester</td>
                <td>@(x.IsActive ? "Active" : "Inactive")</td>
                <td>@x.Room</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@x.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@x.Id">Delete</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
